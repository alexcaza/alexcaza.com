<style>
#resume figure {
  margin: 0;
}

#resume .captioned-video,
#resume .captioned-image {
  width: 50%;
  padding: 5px;
}

#resume .captioned-video iframe {
  height: 87%;
  width: 100%;
}

#resume #intro {
  margin-bottom: 40px;
  position: relative;
}

#resume #intro .resume-download-link {
  position: absolute;
  right: 0;
  top: 0.5rem;
  text-align: center;
  font-size: 0.8rem;
  line-height: 1rem;
  display: flex;
  flex-direction: column;
}

#resume #intro h1 {
  margin-bottom: 0.4rem;
  padding-bottom: 0;
}

#resume #intro .intro-kicker {
  font-weight: 900;
  font-size: 1.4rem;
}

#resume #contact {
  margin-bottom: 40px;
}

#resume .contact-info {
  display: grid;
  grid-template-columns: 1fr 1fr;
}

#resume .contact-info > a {
  padding: 3px;
  margin: 3px;
  padding-left: 0;
  margin-left: 0;
}

#resume .company:not(:last-of-type) {
  border-bottom: 1px solid var(--main-text);
  margin-bottom: 60px;
  padding-bottom: 60px;
}

#resume h2 {
  line-height: initial;
  padding-bottom: 2px;
}

#resume .role {
  padding-bottom: 15px;
  /* Ideally we shouldn't have to reset this */
  margin-bottom: 0;
}

#resume .role .timeline {
  display: inline-block;
  color: var(--accent-txt-color);
  border-left: 3px solid var(--main-text);
  padding-left: 0.5rem;
}

#resume .additional-info {
  margin-bottom: 40px;
  display: flex;
}

#resume .department-breakdown {
  display: grid;
  grid-template-columns: 1fr 1fr;
  margin-bottom: 0;
}

#resume .department {
  margin-top: 5px;
  padding-top: 15px;
  padding-right: 15px;
  margin-right: 5px;
  margin-bottom: 10px;
  border-radius: 5px;
}

#resume .department:last-of-type {
  margin-right: 0;
  padding-right: 0;
}

#resume .work-done li {
  margin-bottom: 1rem;
}

#resume .tech-stack {
  list-style: none;
  width: auto;
  margin: 0;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  padding-left: 0;
}

#resume .tech-stack li {
  padding: 3px;
  padding-left: 0.4rem;
  margin: 5px;
  font-size: 0.8rem;
  border-left: 2px solid var(--main-text);
  border-bottom: 2px solid var(--main-text);
}

#resume li {
  padding-right: 20px;
}

#resume #hobbies {
  margin-bottom: 100px;
}
</style>
