---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, mkBlogLink, Collections } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection(Collections.blog)).sort(
	(a, b) => b.data.created_date.valueOf() - a.data.created_date.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="content-container">
			<section>
				<ul class="article-list">
					{
						posts.map((post) => (
							<li class="article">
								<a href={mkBlogLink(post.slug)}>
									<h2 class="article-title">{post.data.title}</h4>
									<p class="article-date">
										<FormattedDate date={post.data.created_date} />
									</p>
									<p class="article-description">{post.data.description}</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
<style>
	.article-list {
		display: flex;
		padding: 0;
		@media (max-width: 743px) {
			gap: 0.8rem;
		}

		@media (min-width: 744px) {
			gap: 2rem;
		}
	}

	.article {
		display: flex;
	}

	.article a { 
		text-decoration: none;
		color: var(--main-text);

		&:hover {
			opacity: 1;
		}

		&:hover h2 {
			text-decoration: underline;
		}
	}

</style>
